@model Category
@{
    ViewData["Title"] = "ShowDetail";
    IEnumerable<Category> categories = ViewBag.Categories;
    SelectList selectListItems = new SelectList(categories, nameof(Category.Id), nameof(Category.Name));
    int counter = 1;
}
<div class="row justify-content-between">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Category Detail Page</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        №
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Created at
                    </th>
                    <th>
                        Updated at
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category category in categories)
                {
                    <tr>
                        <td>
                            @counter
                        </td>
                        <td>
                            @category.Name
                        </td>
                        <td>
                            @category.CreatedAt?.ToString("dd/mm/yyyy")
                        </td>
                        <td>
                            @category.UpdatedAt?.ToString("dd/mm/yyyy")
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-area="manage" asp-controller="category" asp-action="update" asp-route-id="@category.Id">Update</a>
                            <a class="btn btn-danger" asp-area="manage" asp-controller="category" asp-action="delete" asp-route-id="@category.Id">Delete</a>
                            <a class="btn btn-primary" asp-area="manage" asp-controller="category" asp-action="ShowDetail" asp-route-id="@category.Id">Detail</a>
                        </td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>

    </div>
</div>